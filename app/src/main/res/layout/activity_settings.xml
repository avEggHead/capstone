<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SettingsActivity"
    android:id="@+id/settings_screen">

    <ImageView
        android:id="@+id/settings_screen_heading"
        android:layout_width="255dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/settings_label_at_the_top_of_the_screen"
        android:src="@drawable/settings_heading"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/goal_label"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:layout_below="@id/settings_screen_heading"
        android:layout_centerHorizontal="false"
        android:contentDescription="@string/goal_label_text"
        android:src="@drawable/goal_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <ImageView
        android:id="@+id/goal_input_box"
        android:layout_width="182dp"
        android:layout_height="71dp"
        android:layout_below="@id/settings_screen_heading"
        android:layout_centerHorizontal="false"
        android:layout_toEndOf="@id/goal_label"
        android:contentDescription="@string/the_goal_weight_input_box"
        android:src="@drawable/goal_input_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <EditText
        android:id="@+id/input_goal_weight"
        android:layout_width="84dp"
        android:layout_height="52dp"
        android:layout_below="@+id/settings_screen_heading"
        android:layout_toRightOf="@+id/goal_input_box"
        android:background="@null"
        android:fontFamily="@font/my_custom_font"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:textColor="@color/teal_700"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/goal_input_box"
        app:layout_constraintStart_toStartOf="@+id/goal_input_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121" />

    <ImageView
        android:id="@+id/by_label"
        android:layout_width="90dp"
        android:layout_height="79dp"
        android:layout_below="@id/goal_label"
        android:onClick="goToDatePicker"
        android:src="@drawable/by_date_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="79dp"
        android:layout_below="@id/goal_label"
        android:layout_toRightOf="@id/by_label"
        android:onClick="goToDatePicker"
        android:src="@drawable/by_date_field"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242" />

    <TextView
        android:id="@+id/input_goal_date"
        android:layout_width="226dp"
        android:layout_height="58dp"
        android:layout_below="@+id/goal_input_box"
        android:layout_toRightOf="@+id/by_label"
        android:background="@null"
        android:fontFamily="@font/my_custom_font"
        android:inputType="numberDecimal"
        android:maxLength="8"
        android:onClick="goToDatePicker"
        android:textColor="@color/teal_700"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/gender_label"
        android:layout_width="185dp"
        android:layout_height="64dp"
        android:layout_below="@id/by_label"
        android:layout_centerHorizontal="false"
        android:src="@drawable/gender_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395" />

    <ImageView
        android:id="@+id/gender_field"
        android:layout_width="205dp"
        android:layout_height="68dp"
        android:layout_below="@id/by_label"
        android:layout_toRightOf="@id/gender_label"
        android:src="@drawable/gender_selection"
        android:tag=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.398" />

    <ImageView
        android:id="@+id/height_label"
        android:layout_width="129dp"
        android:layout_height="52dp"
        android:layout_below="@id/gender_label"
        android:layout_centerHorizontal="false"
        android:elevation="2dp"
        android:src="@drawable/height_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557" />

    <ImageView
        android:id="@+id/height_field"
        android:layout_width="215dp"
        android:layout_height="99dp"
        android:layout_below="@id/gender_label"
        android:layout_toRightOf="@id/height_label"
        android:src="@drawable/height_field"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <ImageView
        android:id="@+id/submit_button"
        android:layout_width="191dp"
        android:layout_height="74dp"
        android:layout_below="@id/height_field"
        android:layout_centerHorizontal="true"
        android:onClick="submitPersonalSettings"
        android:src="@drawable/submit_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.832" />

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="112dp"
        android:layout_height="84dp"
        android:layout_below="@id/submit_button"
        android:layout_centerHorizontal="true"
        android:onClick="clearAll"
        android:src="@drawable/cancel_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submit_button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="69dp"
        android:layout_height="78dp"
        android:layout_below="@id/submit_button"
        android:onClick="goBack"
        android:src="@drawable/go_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969" />

    <Button
        android:id="@+id/male_selected"
        android:layout_width="77dp"
        android:layout_height="58dp"
        android:layout_below="@+id/input_goal_date"
        android:layout_toRightOf="@id/gender_label"
        android:background="@android:color/transparent"
        android:onClick="selectMale"
        app:layout_constraintBottom_toBottomOf="@+id/gender_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toStartOf="@+id/gender_field"
        app:layout_constraintTop_toTopOf="@+id/gender_field"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="59dp"
        android:layout_below="@+id/input_goal_date"
        android:layout_toRightOf="@id/male_selected"
        android:background="@android:color/transparent"
        android:onClick="selectFemale"
        app:layout_constraintBottom_toBottomOf="@+id/gender_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/male_selected"
        app:layout_constraintTop_toTopOf="@+id/gender_field"
        app:layout_constraintVertical_bias="0.555" />

    <EditText
        android:id="@+id/height_in_feet"
        android:layout_width="37dp"
        android:layout_height="52dp"
        android:layout_below="@+id/gender_field"
        android:layout_alignStart="@+id/height_field"
        android:layout_toRightOf="@+id/height_label"
        android:background="@null"
        android:fontFamily="@font/my_custom_font"
        android:inputType="numberDecimal"
        android:maxLength="1"
        android:textColor="@color/teal_700"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/height_field"
        app:layout_constraintEnd_toEndOf="@+id/height_field"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="@+id/height_field"
        app:layout_constraintTop_toTopOf="@+id/height_field"
        app:layout_constraintVertical_bias="0.446" />

    <EditText
        android:id="@+id/height_in_inches"
        android:layout_width="51dp"
        android:layout_height="55dp"
        android:layout_below="@+id/gender_field"
        android:layout_alignStart="@+id/height_field"
        android:layout_toRightOf="@+id/height_label"
        android:background="@null"
        android:fontFamily="@font/my_custom_font"
        android:inputType="numberDecimal"
        android:maxLength="2"
        android:textColor="@color/teal_700"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/height_field"
        app:layout_constraintEnd_toEndOf="@+id/height_field"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toStartOf="@+id/height_field"
        app:layout_constraintTop_toTopOf="@+id/height_field"
        app:layout_constraintVertical_bias="0.454" />

</androidx.constraintlayout.widget.ConstraintLayout>