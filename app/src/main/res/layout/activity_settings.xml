<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/settings_screen_heading"
        android:layout_width="255dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/settings_heading"
        android:contentDescription="@string/settings_label_at_the_top_of_the_screen" />

    <ImageView
        android:id="@+id/goal_label"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:layout_below="@id/settings_screen_heading"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="31dp"
        android:src="@drawable/goal_label"
        android:contentDescription="@string/goal_label_text" />

    <ImageView
        android:id="@+id/goal_input_box"
        android:layout_width="182dp"
        android:layout_height="71dp"
        android:layout_below="@id/settings_screen_heading"
        android:layout_centerHorizontal="false"
        android:layout_toEndOf="@id/goal_label"
        android:src="@drawable/goal_input_box"
        android:contentDescription="@string/the_goal_weight_input_box" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/settings_screen_heading"
        android:layout_marginStart="31dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@id/goal_label"
        android:background="@null"
        android:fontFamily="@font/my_custom_font"
        android:inputType="numberDecimal"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        android:textStyle="bold"
        android:autofillHints="enter goal weight" />

    <ImageView
        android:id="@+id/by_label"
        android:layout_width="90dp"
        android:layout_height="79dp"
        android:layout_below="@id/goal_label"
        android:layout_marginTop="7dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/by_date_label" />

    <ImageView
        android:id="@+id/by_date_field"
        android:layout_width="205dp"
        android:layout_height="68dp"
        android:layout_below="@id/goal_label"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/by_label"
        android:src="@drawable/by_date_field" />

    <ImageView
        android:id="@+id/gender_label"
        android:layout_width="185dp"
        android:layout_height="64dp"
        android:layout_below="@id/by_label"
        android:layout_centerHorizontal="false"
        android:src="@drawable/gender_label" />

    <ImageView
        android:id="@+id/gender_field"
        android:layout_width="205dp"
        android:layout_height="68dp"
        android:layout_below="@id/by_label"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/gender_label"
        android:src="@drawable/gender_selection" />

    <ImageView
        android:id="@+id/height_label"
        android:layout_width="189dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/gender_label"
        android:layout_centerHorizontal="false"
        android:src="@drawable/height_label" />

    <ImageView
        android:id="@+id/height_field"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_label"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/height_label"
        android:src="@drawable/height_field" />

    <ImageView
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/height_field"
        android:src="@drawable/submit_button"
        />

    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/submit_button"
        android:src="@drawable/cancel_button"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goBack"
        android:layout_below="@id/submit_button"
        android:src="@drawable/go_back" />

</RelativeLayout>